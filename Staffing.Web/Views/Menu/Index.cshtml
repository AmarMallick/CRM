@model Staffing.BusinessService.ViewModel.MenuVM

@{
    ViewBag.Title = "Staffing | Manage Menus";
}

<section class="content-header">
    <h1>
        Manage Menus
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Menus</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Menus</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" id="search" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button type="button" id="btnSearch" class="btn btn-primary">Go!</button>
                                </span>
                            </div>
                        </div>
                        <div id="grid_export" class="col-md-3" style="margin: auto;">
                        </div>
                        <div class="col-md-6">
                            <button type="button" id="btnAddMenu" class="btn btn-primary pull-right">Add New Menu</button>
                        </div>
                    </div>
                    <br />
                    <table id="grid"></table>
                    @Html.Partial("_AddEditMenu",Model)
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section scripts{
<script src="~/Scripts/staffing/managemenu.js"></script>
<script src="~/Scripts/staffing/clear-validation.js"></script>
}

    
